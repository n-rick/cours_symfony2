{% extends 'base.html.twig' %}

{% block title %}Hello PersonneController!
{% endblock %}

{% block body %}
	<style>
		table {
			font-family: arial, sans-serif;
			border-collapse: collapse;
			width: 100%;
		}

		td,
		th {
			border: 1px solid #dddddd;
			text-align: left;
			padding: 8px;
		}

		tr:nth-child(even) {
			background-color: #dddddd;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! ✅</h1>

		<table>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Prénom</th>
				<th>Rue</th>
				<th>Code Postal</th>
				<th>Ville</th>
				<th>Sports</th>
				<th>Actions</th>
			</tr>
			{% for personne in personnes %}
				<tr>
					<td>{{ personne.id }}</td>
					<td>{{ personne.nom }}</td>
					<td>{{ personne.prenom }}</td>
					{% if personne.adresse %}
						<td>{{personne.adresse.rue}}</td>
						<td>{{personne.adresse.codePostal}}</td>
						<td>{{personne.adresse.ville}}</td>
						<td>Non définie</td>
					{% endif %}
					{% if personne.sports %}
						{% for sport in personne.sports %}
							<td>{{sport.name}}</td>
						{% endfor %}
					{% endif %}
					<td>Voir Ajouter Supprimer</td>
				</tr>
			{% endfor %}

		</table>

	</div>
{% endblock %}
